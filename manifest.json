{
  "manifest_version": 3,
  "name": "Bitcoin Sale",
  "version": "1.0",
  "description": "A fun extension that tracks Bitcoin price changes and tells you if Bitcoin is on sale, stable, or mooning!",
  "permissions": ["alarms", "tabs"],
  "host_permissions": ["https://api.coingecko.com/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_hodl16.png",
      "32": "icons/icon_hodl32.png",
      "48": "icons/icon_hodl48.png",
      "64": "icons/icon_hodl64.png",
      "96": "icons/icon_hodl96.png",
      "128": "icons/icon_hodl128.png"
    }
  },
  "icons": {
    "16": "icons/icon_hodl16.png",
    "32": "icons/icon_hodl32.png",
    "48": "icons/icon_hodl48.png",
    "64": "icons/icon_hodl64.png",
    "96": "icons/icon_hodl96.png",
    "128": "icons/icon_hodl128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
